<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DriverActivity">

    <EditText
        android:id="@+id/startLocation1"
        android:layout_width="366dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Starting location"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/endLocation1"
        android:layout_width="366dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Ending location"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/startLocation1"
        app:layout_constraintStart_toStartOf="@+id/startLocation1"
        app:layout_constraintTop_toBottomOf="@+id/startLocation1" />

    <android.widget.Button
        android:id="@+id/find1"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/continue_button"
        android:text="Find"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView29981"
        android:layout_width="305dp"
        android:layout_height="324dp"
        android:layout_marginTop="332dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Your request was succesfully  submittted on server keep live on this message you shall get notification when riders request you for trip"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>