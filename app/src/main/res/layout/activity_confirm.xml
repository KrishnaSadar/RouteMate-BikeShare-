<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ConfirmActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="352dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:text="What's your email"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Entre an email"
        android:inputType="textWebEmailAddress"
        android:paddingLeft="10dp"
        android:shadowColor="@color/black"
        app:barrierMargin="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_marginTop="246dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_horizontal_rule_24" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="52dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/findMyAccount"
        app:layout_constraintEnd_toStartOf="@+id/findMyAccount"
        app:layout_constraintTop_toTopOf="@+id/findMyAccount"
        app:srcCompat="@drawable/baseline_manage_search_24" />

    <TextView
        android:id="@+id/findMyAccount"
        android:layout_width="236dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:text="Find My Account"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="391dp"
        android:layout_height="173dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="552dp"
        android:text="By proceding you consent to get calls whatsapp or sms messages,include by action aftermeans from and affilate to number provided"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/button2"
        android:layout_width="323dp"
        android:layout_height="74dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/continue_button"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>